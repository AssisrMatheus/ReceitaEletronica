@model RM_e.Model.Model.Receita

@for (int i = 0; i < Model.Itens.Count; i++)
{
    <li class='list-group-item'>
        <div class="col-md-6 ">
            <div class="form-group">
                @Html.LabelFor(x => x.Itens[i].Medicamento.NumAnvisa)
                @Html.EditorFor(x => x.Itens[i].Medicamento.NumAnvisa, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Itens[i].Medicamento.Nome)
                @Html.EditorFor(x => x.Itens[i].Medicamento.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(x => x.Itens[i].Medicamento.Uso)
                @Html.EditorFor(x => x.Itens[i].Medicamento.Uso, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Itens[i].Medicamento.ContraIndicacao)
                @Html.EditorFor(x => x.Itens[i].Medicamento.ContraIndicacao, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="clearfix">
        </div>

        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(x => x.Itens[i].Instrucao)
                @Html.TextAreaFor(x => x.Itens[i].Instrucao, new { @class = "form-control" })
            </div>
        </div>
    </li>
}